-- import: fpm

-- ftd.row:
spacing: 5

--- ftd.text: $fpm.document-title
--- ftd.text: is not marked

-- boolean show-main: true

-- ftd.text: Show Fallback
if: $show-main
$event-click$: toggle $show-main
$event-click$: message-host show_fallback

-- ftd.text: Show Main
if: not $show-main
$event-click$: toggle $show-main
$event-click$: message-host show_main
